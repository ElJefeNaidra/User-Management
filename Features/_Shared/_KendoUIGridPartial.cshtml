    .k-grid .k-grid-header .k-header .k-link {
        height: auto;
        text-align: center !important;
    }

    .k-grid .k-grid-header .k-header {
        white-space: normal;
        text-align: center !important;
    }

    .k-column-title {
        min-width: 0;
        text-overflow: ellipsis;
        white-space: normal;
        -ms-flex-negative: 1;
        flex-shrink: 1;
        overflow: hidden;
        text-align: center !important;
    }
</style>

