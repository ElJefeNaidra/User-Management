</head>

<body>
    @* NO SCRIPT TAG NEEDS TO STAY HERE *@
    <noscript>
        <div style="color: red; background-color: yellow; text-align: center;">
            This application requires JavaScript to be enabled.
        </div>
    </noscript>
    @await Html.PartialAsync("~/Features/_Layout_TopbarSimple.cshtml")

    @RenderBody()

    <footer style="margin-left: 30px;position: absolute;bottom: 0;padding-bottom: 15px;">
        <div>
            <div>
                @ResourceRepo.GetResourceByName("FooterSystemName")<br />
                ©<script>document.write(new Date().getFullYear())</script> @ResourceRepo.GetResourceByName("FooterInstitutionName")<br />
            </div>
        </div>
    </footer>

    @* PREVENT ENTER KEY FROM SUBMITTING THE FORMS *@
    <script>
        $(document).ready(function () {
            $('form').keypress(function (e) {
                if (e.keyCode == 13) {
                    e.preventDefault();
                }
            });
        });
    </script>
</body>
</html>
